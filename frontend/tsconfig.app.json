{
   "compilerOptions": {
      "target": "ES2020",
      "lib": ["DOM", "ES2020"],
      "module": "ESNext",
      "moduleResolution": "bundler",
      "jsx": "react-jsx",
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
         "@/*": ["src/*"]
      },
      "types": ["vite/client"]
   },
   "include": ["src"]
}
